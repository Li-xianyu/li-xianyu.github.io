      // 当鼠标悬停在li上时，显示对应的惩罚措施
      $("ul li").hover(
        function () {
          $(this).find(".punishment").stop(true, true).slideDown(500); // 显示
        },
        function () {
          $(this).find(".punishment").stop(true, true).slideUp(500); // 隐藏
        }
